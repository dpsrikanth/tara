<% include ../partials/header %>

<div class="container ls">
    <div class="row" style="margin: 50px auto 100px;">
        <div class="col-md-12 mb-5"><h2 class="special-heading text-left">
            <span class="text-capitalize">
               Edit  Data Sheet
            </span>
        </h2></div>
        <div class="col-md-6">
            <form action="/equipment/<%=equipment_id%>/datasheets/<%=datasheet._id%>?_method=PUT" method="POST"
                enctype="multipart/form-data">
                <div class="card border-info">
                    <div class="card-header bg-info ">
                      Edit Data Sheet
                    </div>
                    <div class="card-body">
                        <div class="text-center mb-3">
                        <label class="mb-3" for="exampleFormControlFile1"><i class="fas fa-sync fa-1x"
                            style="color: gray"></i> <i class="far fa-file-pdf fa-3x" style="color: gray"></i></label>
                            </div>
                <div class="form-group">
                    
                    <!--<input class="form-control-file border rounded form-control p-0" type="file"
                        id="exampleFormControlFile1" name="datasheetFile" accept="application/pdf" required>-->

                        <input type="file" class="custom-file-input" id="exampleFormControlFile1"
                                aria-describedby="inputGroupFileAddon01" name="datasheetFile" accept="application/pdf"
                                required onchange="ValidateDatasheetFileSize(this)" readonly>
                            <label class="custom-file-label" for="exampleFormControlFile1"></label>
                        
                </div>
                <div class="form-group mt-5 ">
                    <button class="btn btn-gradient"><i class="fas fa-file-upload"></i>   Submit</button>
                    <a class="btn btn-darkgrey" href="/equipment/<%=equipment_id%>/edit"><i class="fas fa-arrow-circle-left"></i> Back</a>
                </div>
                </div>
                </div>
            </form>
            
        </div>
        <div class="col-md-6">

            <div class="card">
                <div class="card-header">
                    Instructions
                </div>
                <div class="card-body">
                    <em>We recommend the following specifications when uploading your images onto TARA:</em>
                    <ul class="mb-4">
                        <li><b>Maximum image size:</b> 3mb</li>
                        <li><b>Files Supported:</b> PDF</li>
                        <li><em>Please double-check on the equipment page that your image displays correctly after
                                uploading.</em></li>
                    </ul>
                </div>
              </div>

           
        </div>
    </div>
</div>



<% include ../partials/footer %>
